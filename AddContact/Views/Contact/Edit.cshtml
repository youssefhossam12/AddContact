@using static AddContact.Models.Contact;
@model Contact
@{
    var action = ViewContext.RouteData.Values["action"]!;
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;
    
}

<h2>@ViewBag.Title</h2>


<form asp-controller="Contact" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="ContactId" />

    <div class="form-group mb-2">
        <label asp-for="FirstName" class="col-form-label col-md-2">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        
        
    </div>

    <div class="form-group mb-2">
        <label asp-for="LastName" class="col-form-label col-md-2">Last Name</label>
        <input asp-for="LastName" class="form-control" />
       
    </div>

    <div class="form-group mb-2">
        <label asp-for="Phone" class="col-form-label col-md-2">Phone</label>
        <input asp-for="Phone" class="form-control" />
        
    </div>

    <div class="form-group mb-2">
        <label asp-for="Email" class="col-form-label col-md-2">Email</label>
        <input asp-for="Email" class="form-control" />
        
    </div>

    <div class="form-group mb-4">
        <label asp-for="Category" class="col-form-label col-md-2">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="@ContactCategory.Friend">Friend</option>
            <option value="@ContactCategory.Work">Work</option>
            <option value="@ContactCategory.Family">Family</option>
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        @if (Model.ContactId == 0)
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>

        }
        else
        {
            <a asp-controller="Contact" asp-action="Details" asp-route-id="@Model.ContactId" class="btn btn-secondary">Cancel</a>
        }
        
    </div>


    
</form>

